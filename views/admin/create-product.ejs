<h2 class="mt-5 text-center">Create Book</h2>
<div class="d-flex justify-content-center mt-5">
  <form class="col-lg-4" action="/admin/create" method="post">
    <div class="mb-3">
      <label for="book-title" class="form-label">Title</label>
      <input type="text" class="form-control" id="book-title" name="title" />
    </div>
    <div class="mb-3">
      <label for="img-url" class="form-label">Image Url</label>
      <input type="text" class="form-control" id="img-url" name="imgUrl" />
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <input
        type="number"
        class="form-control"
        id="price"
        name="price"
        step="0.1"
      />
    </div>
    <div class="mb-3">
      <label for="description">Description</label>
      <textarea
        class="form-control"
        name="description"
        id="description"
        rows="5"
      ></textarea>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>
